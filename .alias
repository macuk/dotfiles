alias l='ls -lash'

# Git aliases
alias gst='git status -s'
alias gd='git diff'
alias gdc='git diff --cached'
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gb='git branch'
alias gba='git branch -a'
alias ga='git add'
alias gl='git log -p'


alias b="bundle"
alias bi="b install --path vendor"
alias bil="bi --local"
alias bu="b update"
alias be="b exec"
alias ber="be rake"
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"

alias rs='be rails s thin'
alias rc='be rails c'
alias rdb='be rails db -p'

alias migr='ber db:migrate'
alias roll='ber db:rollback'

alias pgs="sudo pg_ctlcluster 9.1 main start"
